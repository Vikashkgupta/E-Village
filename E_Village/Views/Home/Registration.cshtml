@{
    Layout = null;
}



<html>
<head>
    <title>E-Village | Registration Page</title>
    <!--Made with love by Mutiullah Samim -->

    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link href="https://fonts.googleapis.com/css?family=Numans" />

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="styles.css">
    <style>
        /* ------------------------------------------------------------------------------------------------------------------------------------- */


        /* code for scroll bar */

        body::-webkit-scrollbar {
            background: transparent;
            width: 0px;
        }

        body::-webkit-scrollbar-thumb {
            /* background: linear-gradient(red,blue); */
            background: #3fa15d;
            border-radius: 5px;
            width: 5px;
        }

        /* ------------------------------------------------------------------------------------------------------------------------------------- */

        /* Made with love by Mutiullah Samim*/


        html, body {
            background-image: url('http://getwallpapers.com/wallpaper/full/a/5/d/544750.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            height: 100%;
            font-family: 'Numans', sans-serif;
        }

        .container {
            height: 100%;
            align-content: center;
        }

        .card {
            height: 950px;
            margin-top: auto;
            margin-bottom: auto;
            width: 600px;
            background-color: rgba(0,0,0,0.5) !important;
            top: 5%;
        }

        .social_icon span {
            font-size: 60px;
            margin-left: 10px;
            color: #00712f;
        }

            .social_icon span:hover {
                color: white;
                cursor: pointer;
            }

        .card-header h3 {
            color: white;
        }

        .social_icon {
            position: absolute;
            right: 20px;
            top: -45px;
        }

        .input-group-prepend span {
            width: 50px;
            background-color: #00712f;
            color: black;
            border: 0 !important;
        }

        input:focus {
            outline: 0 0 0 0 !important;
            box-shadow: 0 0 0 0 !important;
        }

        .remember {
            color: white;
        }

            .remember input {
                width: 20px;
                height: 20px;
                margin-left: 15px;
                margin-right: 5px;
            }

        .login_btn {
            color: black;
            background-color: #00712f;
            width: 100px;
        }

            .login_btn:hover {
                color: black;
                background-color: white;
            }

        .links {
            color: white;
        }

            .links a {
                margin-left: 4px;
            }

        #displayImage {
            height: 100px;
            width: 100px;
            border-radius: 50%;
            /*    box-shadow:0px 0px 3px 3px lightgray;   */
            transition: 1s;
        }

            #displayImage:hover {
                transform: scale(1.2);
            }

        input[type=checkbox] {
            accent-color: #00712f;
        }
    </style>

    <script>

        function getCaptcha() {
            var strArr = "1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ";
            var code = "";
            for (var i = 0; i < 5; i++) {
                code = code + strArr[Math.floor(Math.random() * 20)];
            }
            return code;
        }

        function demo() {
            var c = getCaptcha();
            document.getElementById('ct1').innerHTML = c;
            document.getElementById('hdn1').value = c;

        }

    </script>

</head>
<body>
    <br />
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Registration</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/home/registration" method="post" enctype="multipart/form-data">

                        <center>
                             <div class="displayImage">
                            <img id="displayImage" src="~/Content/images/profile.jpg" /><br />
                            <input name="Profile_Picture" required type="file" id="imageInput" class="form form-control" placeholder="Profile pic" style="background:transparent;width:125px;height:40px; border-radius:10px;color:transparent;border:none" accept="image/*">
                        </div>
                       </center>



                        <br />


                        <input name="Name" id="name" required type="text" class="form form-control" placeholder="Full Name" style="background: transparent; color: white;">

                        <br />


                        <input name="Father_Name" required type="text" class="form-control" placeholder="Father's Name" style="background: transparent; color: white;">
                        <br />


                        <input name="DOB" required type="date" class="form-control" placeholder="DOB" style="background: transparent; color: white;">
                        <br />

                        <textarea name="Address" required class="form-control" placeholder="Address" rows="1" style="background: transparent; color: white; resize: none;"></textarea>

                        <br />

                        <input name="Mobile" id="mobile" required type="number" class="form-control" placeholder="Mobile" style="background: transparent; color: white;">

                        <br />

                        <input name="Email" id="email" required type="email" class="form-control" placeholder="E-mail" style="background: transparent; color: white;">
                        <br />

                        <input name="Password" required type="password" class="form-control" placeholder="password" style="background: transparent; color: white;">

                        <br />





                        <!-- capcha -->
                        <h3 style="display: inline;">Captcha </h3>
                        <span style="color: green; font-size: 30px; background: url('../Content/images/captcha.png'); border-radius: 5px;"><strike id="ct1">hgytd</strike></span>


                        <span style="color: green; font-size: 30px; cursor: pointer;" onclick="demo()">🔃 </span>
                        <br />
                        <br />
                        <input type="text" name="ct1" class="form form-control" placeholder="Enter captcha code " style="background: transparent; color: white;" />
                        <input type="hidden" id="hdn1" name="hdn1" />

                        <br />
                        <!-- capcha -->









                        <div class="row align-items-center remember">
                            <input type="checkbox">Remember Me
				
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn float-right login_btn" onclick="SendEmail()">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Already have an account?<a href="/home/Public_login">Log In</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://smtpjs.com/v3/smtp.js"> </script>

    <script>
        function SendEmail() {

            var name = document.getElementById('name').value;
            var email = document.getElementById('email').value;
            var mobile = document.getElementById('mobile').value;

            var body = "Dear " + name + ", <br/><br/> Congratulations! Your registration on E-village Portal is now complete. You're officially part of our community.<br/><br/>Log in now to explore our exciting features.<br/><br/>If you need assistance, contact us & don't forget to give your feedback of website.<br/><br/>Welcome aboard!<br/><br/>Best regards,<br/>Vikash Kumar Gupta<br/>Web Developer<br/>E-village Portal";


            Email.send({
                SecureToken : "1c6ea53e-d230-433e-99fb-b7c095db4ae8",
                To: email,
                From: "madhumairwa.9876@gmail.com",
                Subject: "Registration Successful - Welcome to E-village Portal !",
                Body: body
            }).then(
                message => alert(message)
            );


        }
            
        //////////////////////////////////////////////////////////////////////////////////////////////////////


        // Input element ko select kare
        var imageInput = document.getElementById('imageInput');

        // Image element ko select kare
        var displayImage = document.getElementById('displayImage');

        // Input element me kuch badlav hota hai to is event listener se uska response lo
        imageInput.addEventListener('change', function () {
            // Input me se chuni gayi file ko select karo
            var selectedImage = imageInput.files[0];

            // Selected image ka URL nikalo
            var imageURL = URL.createObjectURL(selectedImage);

            // Image element ki src property ko set karo
            displayImage.src = imageURL;
        });


    </script>
</body>
</html>










