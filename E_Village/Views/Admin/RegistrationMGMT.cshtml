@{
    ViewBag.Title = "RegistrationMGMT";
    Layout = "~/Views/Shared/AdminMasterPage.cshtml";
}


@model List<E_Village.Models.Table_Registration>

<h1 class="text-center" style="text-shadow: 2px 2px 1px gray;">Registration Details</h1>
<br />

<div class="row">
    <table class="table table-striped table-hover" border="1">
        <tr>
            <th>ID</th>
            <th>Profile Picture</th>
            <th>Name</th>
            <th>Father's Name</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Password</th>
            <th>Registration Date</th>

            <th>Add</th>
            <th>Delete</th>
            <th>Update</th>


        </tr>
        @foreach (var y in Model)
        {
            <tr>
                <td><b>@y.ID</b></td>
                <td>
                    <img src="~/content/Profile_Pictures/@y.Profile_Picture" height="50" width="50" style="border-radius:50%;"/>
                </td>
                <td>@y.Name</td>
                <td>@y.Father_Name</td>
                <td>@y.DOB</td>
                <td>@y.Address</td>
                <td>@y.Mobile</td>
                <td>@y.Email</td>
                <td>@y.Password</td>
                <td>@y.Registration_Date</td>

            <th><a href="/admin/add"><span class="fa fa-add text-success text-center" style="font-size:20px;"></span></a></th>
            <th><a href="/admin/Delete?m=@y.Email"><span class="fa fa-trash text-danger text-center" style="font-size:20px;"></span></a></th>
            <th><a href="/admin/UpdateRecord?U=@y.Email"><span class="fa-solid fa-pen-to-square text-danger text-center" style="font-size:20px;"></span></a></th>

            </tr>
        }
    </table>
</div>

